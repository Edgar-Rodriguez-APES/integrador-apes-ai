[flake8]
# Maximum line length
max-line-length = 120

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    node_modules,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache

# Ignore specific errors
ignore =
    E203,  # whitespace before ':'
    E501,  # line too long (handled by max-line-length)
    W503,  # line break before binary operator
    W504,  # line break after binary operator

# Maximum complexity
max-complexity = 10

# Show source code for each error
show-source = True

# Show pep8 error code
show-pep8 = True

# Count errors
count = True

# Statistics
statistics = True
